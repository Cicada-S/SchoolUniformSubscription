.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.container .userInfo {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  color: #FFFFFF;
  padding: 0 40rpx;
  line-height: 140rpx;
  background-image: linear-gradient(to top right, #51a1f8, #407ef5);
}
.container .userInfo .userAvatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.container .userInfo .userName {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
