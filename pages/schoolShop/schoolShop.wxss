/* pages/schoolShop/schoolShop.wxss */
.container {
  width: 100vw;
}
.container .student {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 40rpx;
  background: #FFFFFF;
}
.container .student .studentInfo {
  height: 100%;
  display: flex;
  align-items: center;
}
.container .student .studentInfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.container .student .studentInfo .info {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.container .student .switch .iconfont {
  color: #407EF5;
  font-size: 60rpx;
}
.container .promptDox {
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #FFFFFF;
  background-image: linear-gradient(to top right, #51A1F8, #407EF5);
}
.container .promptDox .tips {
  width: 450rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.container .promptDox .tips image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 10rpx;
}
.container .promptDox .tips text {
  flex: 1;
  line-height: 40rpx;
  letter-spacing: 1px;
}
.container .promptDox .reciprocal {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background: #dbeaff;
  border-radius: 20rpx 0 0 20rpx;
  padding-top: 5rpx;
  color: #172ACA;
}
.container .promptDox .reciprocal .time {
  margin-top: 12rpx;
}
.container .promptDox .reciprocal .time text {
  color: #FFFFFF;
  padding: 8rpx 6rpx;
  margin: 0 10rpx;
  border-radius: 10rpx;
  background: #172ACA;
}
.container .productList {
  padding: 20rpx;
}
.container .productList .productItem {
  width: 100%;
  height: 300rpx;
  display: flex;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: #FFFFFF;
  box-shadow: 2rpx 4rpx 12rpx 2rpx rgba(0, 0, 0, 0.16);
}
.container .productList .productItem .producImg image {
  width: 240rpx;
  height: 240rpx;
}
.container .productList .productItem .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.container .productList .productItem .info .price {
  color: #DB211B;
  font-size: 24rpx;
}
.container .productList .productItem .info .price text {
  font-size: 32rpx;
}
.container .productList .productItem .action {
  width: 120rpx;
  height: 60rpx;
  align-self: flex-end;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #407EF5;
}
.container .productAction {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  background: #FFFFFF;
}
.container .productAction .productActionInfo {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.container .productAction .productActionInfo .iconfont {
  position: relative;
  color: #407EF5;
  font-size: 60rpx;
}
.container .productAction .productActionInfo .iconfont .productNum {
  position: absolute;
  top: -10rpx;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 50%;
  background: #DB211B;
}
.container .productAction .productActionInfo .totalPrice {
  margin-left: 25rpx;
}
.container .productAction .productActionButton {
  width: 280rpx;
  height: 76rpx;
  color: #FFFFFF;
  line-height: 76rpx;
  text-align: center;
  letter-spacing: 10rpx;
  border-radius: 10rpx;
  background: #407EF5;
}
