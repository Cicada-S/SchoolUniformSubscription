/* pages/addSchool/addSchool.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx 0 30rpx;
}
.container .optionTitle {
  font-size: 30rpx;
}
.container .customIcon {
  font-size: 40rpx;
  margin-left: 30rpx;
}
.container .optionInput {
  padding-left: 30rpx;
  color: #757575;
  font-size: 28rpx;
}
.container .addBtn {
  border: none;
  border-top: 1rpx solid #dedede;
}
.container van-uploader .van-uploader {
  margin: 20rpx 30rpx 10rpx 30rpx;
}
.container van-uploader .van-uploader .van-uploader__upload {
  width: 145rpx !important;
  height: 145rpx !important;
  margin: 0 0 16rpx 0 !important;
}
.container van-uploader .van-uploader image {
  width: 145rpx !important;
  height: 145rpx !important;
}
.container .applyItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.container .applyItem .avatarUrl {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.container .applyItem .nickName {
  flex: 1;
  padding-left: 20rpx;
}
.container .applyItem .operation {
  display: flex;
}
.container .applyItem .operation .refuseButton {
  color: #DB211B;
}
.container .applyItem .operation .agreeButton {
  color: #407EF5;
  margin-left: 30rpx;
}
