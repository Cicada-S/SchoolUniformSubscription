<!--pages/orderList/orderList.wxml-->
<view class="container">
  <Search bind:search="search" />

  <van-dropdown-menu active-color="#407EF5">
    <van-dropdown-item value="{{ gradeValue }}" options="{{ gradeList }}" />
    <van-dropdown-item value="{{ classValue }}" options="{{ classList }}" />
  </van-dropdown-menu>

  <view class="orderList">
    <BlockBox title="Cicada">
      <view class="productInfo">
        <image src="{{item.headImage}}" />
        <view class="info">
          <view class="item title">
            <view>夏季运动套装</view>
            <view class="right">¥ 98</view>
          </view>
          <view class="item parameter">
            <view>男，175，白蓝</view>
            <view class="right">x2</view>
          </view>
        </view>
      </view>
    </BlockBox>
  </view>
</view>
